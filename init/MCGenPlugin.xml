<cookerinit
  xml:base="homedir/.cooker/shared/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  xsi:noNamespaceSchemaLocation='demo.xsd'>

  <xi:include href="init/SCLumi.xml" parse="xml"/>

<Generator>
  <config>
    <qrnd>useQuasiRandom</qrnd>
    <event>setEventCount</event>
    <eBeam>setBeamE</eBeam>
    <spec>setBeamSpecies</spec>
    <off>setBeamOffset</off>
    <slope>setBeamSlope</slope>
    <beamGeo>useBeamGeoSC</beamGeo>
    <vertex>setVertexDist</vertex>
    <theta>setThetaRange</theta>
    <phi>setPhiRange</phi>
    <dE>useDeltaECut</dE>
   </config>

